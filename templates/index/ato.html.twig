{% extends 'index/index.html.twig' %}
{# {% block title %}{% endblock %} #}
{% block additional_css %}
    {{ parent() }}
{% endblock %}
{% block body %}
   <header>
        {% block header %}
            {{parent()}}
        {% endblock %}
    </header>
    <section>
        {% form_theme tri with ['form_div_layout.html.twig'] only %}
        {{form_start(tri, {'attr': {'id': 'tri'}}) }}
        {{form_end(tri)}}
        <script>
            $('#tri_option2').change(function()
            {
                $('#tri').submit();
            })
        </script>
        <div class="div_card">
            {% for product in products %}
                {% for atoProduct in  atosProducts %}
                    {% if product.id == atoProduct.product %}      
                            <div class="card" nb={{loop.index}} style="width:18rem;">
                                {% if product.nouveau == 1%}
                                    <span class="badge bg-secondary">New</span>
                                {% endif %}
                            <img src="{{ asset(''~ product.image ~'') }}" class="card-img-top" alt="Symfony!" height=300 width=120/>
                            
                            <div class="card-body">
                                <div class="infossup">
                                    <ul>
                                        {# <li><span class="gras">Description :</span>{{ product.description }}</li> #}
                                        <li><span class="gras">Contenance :</span>{{atoProduct.capacity}}</li>
                                        <li><span class="gras">Longueur :</span>{{atoProduct.length}}</li>
                                        <li><span class="gras">Diametre :</span>{{atoProduct.diameter}}</li>
                                        <li>Drip tip : 510 universel</li>
                                        <li>Pas de vis : 510 universel</li>
                                        <li><span class="gras">Résistance :</span>{{atoProduct.resistance}}</li>
                                        <li><span class="gras">Remplissage :</span>{{atoProduct.filling}}</li>
                                        {% if atoProduct.airflow == 1 %}
                                            <li><span class="gras">Airflow :</span>OUI</li> 
                                        {% else %} 
                                            <li><span class="gras">Airflow : </span>NON</li> 
                                        {% endif %}
                                    </ul>
                                </div>
                                <h5 class="card-title">{{product.name}}</h5>
                                {# <p class="card-text">{{product.shortDescription}}</p> #}
                                <p class="price">Prix : {{product.price}} €</p>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal{{loop.index}}">
                                Voir plus
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal{{loop.index}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Description</h5>
                                                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <ul>
                                                    {# <li><span class="gras">Description :</span>{{ product.description }}</li> #}
                                                    <li><span class="gras">Contenance :</span>{{atoProduct.capacity}}</li>
                                                    <li><span class="gras">Longueur :</span>{{atoProduct.length}}</li>
                                                    <li><span class="gras">Diametre :</span>{{atoProduct.diameter}}</li>
                                                    <li>Drip tip : 510 universel</li>
                                                    <li>Pas de vis : 510 universel</li>
                                                    <li><span class="gras">Résistance :</span>{{atoProduct.resistance}}</li>
                                                    <li><span class="gras">Remplissage :</span>{{atoProduct.filling}}</li>
                                                    {% if atoProduct.airflow == 1 %}
                                                        <li><span class="gras">Airflow :</span>OUI</li> 
                                                    {% else %} 
                                                        <li><span class="gras">Airflow : </span>NON</li> 
                                                    {% endif %}
                                                </ul>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> 
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </div>
    </section>
{% endblock %}
